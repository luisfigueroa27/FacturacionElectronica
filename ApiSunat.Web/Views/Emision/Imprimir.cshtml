@model ApiSunat.Domain.Entities.Documento
@{
    // Usamos un layout vacío para que solo se imprima el comprobante
    Layout = null;
    bool esFactura = Model.TipoDocumento == "Factura";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Imprimir @Model.Serie-@Model.Correlativo</title>
    <style>
        /* Define el tamaño de página para la impresión */
        @@page {
            size: 80mm auto; /* Ancho de ticket de 80mm, altura automática */
            margin: 3mm;
        }

        body {
            font-family: 'Courier New', Courier, monospace;
            margin: 0;
            padding: 0;
            color: #000;
        }

        .ticket {
            width: 100%; /* El ancho lo controla @@page */
            font-size: 12px;
        }

        .ticket-header, .ticket-footer {
            text-align: center;
        }

            .ticket-header h4, .ticket-header p {
                margin: 2px 0;
                font-weight: bold;
            }

        .ticket-info p {
            margin: 3px 0;
        }

        .ticket-body table {
            width: 100%;
            border-collapse: collapse;
        }

        .ticket-body th, .ticket-body td {
            font-size: 12px;
            padding: 2px 0;
        }

        .ticket-body .item-row td {
            border-bottom: 1px dashed #000;
        }

        .ticket-body .total-row td {
            padding-top: 5px;
            font-weight: bold;
        }

        .text-left {
            text-align: left;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        hr {
            border: 0;
            border-top: 1px dashed #000;
        }

        /* Oculta el botón cuando se imprime */
        @@media print {
            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body onload="window.print();">

    <div class="ticket">
        <div class="ticket-header">
            <h4>@Model.Empresa.NombreComercial</h4>
            <p>@Model.Empresa.NombreLegal</p>
            <p>RUC: @Model.Empresa.Ruc</p>
            <p>@Model.Empresa.DireccionFiscal</p>
            <hr>
            <h4>@(esFactura ? "FACTURA ELECTRÓNICA" : "BOLETA DE VENTA ELECTRÓNICA")</h4>
            <p><strong>@Model.Serie - @Model.Correlativo.ToString("D8")</strong></p>
        </div>

        <div class="ticket-info">
            <p><strong>Fecha:</strong> @Model.FechaEmision.ToString("dd/MM/yyyy")</p>
            <p><strong>Cliente:</strong> @Model.Cliente.NombreRazonSocial</p>
            <p><strong>@(Model.Cliente.TipoDocumentoIdentidad):</strong> @Model.Cliente.NumeroDocumentoIdentidad</p>
            <p><strong>Dirección:</strong> @Model.Cliente.Direccion</p>
        </div>

        <hr>

        <div class="ticket-body">
            <table>
                <thead>
                    <tr>
                        <th class="text-left">CANT</th>
                        <th class="text-left">DESCRIP.</th>
                        <th class="text-right">IMPORTE</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Detalles)
                    {
                        <tr class="item-row">
                            <td>@item.Cantidad.ToString("F2")</td>
                            <td>@item.Descripcion.ToUpper()</td>
                            <td class="text-right">@item.TotalItem.ToString("F2")</td>
                        </tr>
                    }
                    <tr class="total-row">
                        <td colspan="2">OP. GRAVADA:</td>
                        <td class="text-right">@Model.TotalOperacionGravada.ToString("F2")</td>
                    </tr>
                    <tr class="total-row">
                        <td colspan="2">IGV (18%):</td>
                        <td class="text-right">@Model.TotalIGV.ToString("F2")</td>
                    </tr>
                    <tr class="total-row">
                        <td colspan="2">IMPORTE TOTAL:</td>
                        <td class="text-right">@Model.ImporteTotal.ToString("F2")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="ticket-footer">
            <p>SON: @Model.ImporteEnLetras</p>
            <p class="mt-4">¡Gracias por su compra!</p>
        </div>
    </div>

    <div class="text-center no-print" style="margin-top: 20px;">
        <button onclick="window.print();" class="btn btn-primary">Volver a Imprimir</button>
    </div>

</body>
</html>
