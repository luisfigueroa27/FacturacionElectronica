@model ApiSunat.Domain.Entities.Documento
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Factura @Model.Serie-@Model.Correlativo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 20px;
        }

        .invoice-container {
            max-width: 800px;
            margin: auto;
            background: #fff;
            padding: 2.5rem;
            border: 1px solid #dee2e6;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,.05);
        }

        .invoice-header {
            border-bottom: 2px solid #000;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

            .invoice-header .logo {
                max-height: 90px;
            }

            .invoice-header .ruc-box {
                border: 2px solid #000;
                padding: 10px;
                text-align: center;
            }

        .invoice-details {
            border: 1px solid #dee2e6;
            padding: 15px;
            margin-bottom: 20px;
        }

        .items-table thead {
            background-color: #343a40;
            color: #fff;
        }

        .items-table th, .items-table td {
            vertical-align: middle;
        }

        .totals-section {
            border-top: 2px solid #000;
            padding-top: 15px;
            margin-top: 20px;
        }

            .totals-section td {
                padding: 5px 0;
            }
        /* Oculta los botones al imprimir */
        @@media print {
            body {
                padding-top: 0;
                background-color: #fff;
            }

            .no-print {
                display: none;
            }

            .invoice-container {
                box-shadow: none;
                border: none;
            }
        }
    </style>
</head>
<body>
    <div class="container no-print mb-3">
        <button onclick="window.print();" class="btn btn-primary">
            <i class="fas fa-print"></i> Imprimir
        </button>
    </div>

    <div class="invoice-container">
        <div class="row invoice-header">
            <div class="col-8 d-flex align-items-center">
                <img src="@(Model.Empresa.LogoUrl ?? "/images/default-logo.png")" alt="Logo" class="logo me-3" />
                <div>
                    <h4 class="mb-1">@Model.Empresa.NombreComercial</h4>
                    <p class="mb-0 small">@Model.Empresa.NombreLegal</p>
                    <p class="mb-0 small">@Model.Empresa.DireccionFiscal</p>
                </div>
            </div>
            <div class="col-4 d-flex align-items-center">
                <div class="ruc-box w-100">
                    <h5 class="mb-1">R.U.C. N° @Model.Empresa.Ruc</h5>
                    <h5 class="mb-0"><strong>FACTURA ELECTRÓNICA</strong></h5>
                    <h5 class="mb-0">@Model.Serie - @Model.Correlativo.ToString("D8")</h5>
                </div>
            </div>
        </div>

        <div class="row invoice-details">
            <div class="col-6">
                <p class="mb-1"><strong>RAZÓN SOCIAL:</strong> @Model.Cliente.NombreRazonSocial</p>
                <p class="mb-1"><strong>RUC:</strong> @Model.Cliente.NumeroDocumentoIdentidad</p>
                <p class="mb-0"><strong>DIRECCIÓN:</strong> @Model.Cliente.Direccion</p>
            </div>
            <div class="col-6">
                <p class="mb-1"><strong>EMISIÓN:</strong> @Model.FechaEmision.ToString("yyyy-MM-dd - HH:mm:ss")</p>
                <p class="mb-1"><strong>MONEDA:</strong> @Model.Moneda</p>
                <p class="mb-0"><strong>FORMA DE PAGO:</strong> @Model.FormaPago</p>
            </div>
        </div>

        <table class="table items-table">
            <thead>
                <tr>
                    <th>CANTIDAD</th>
                    <th>CÓDIGO Y DESCRIPCIÓN</th>
                    <th class="text-end">PRECIO UNITARIO</th>
                    <th class="text-end">PRECIO TOTAL</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Detalles)
                {
                    <tr>
                        <td>@item.Cantidad.ToString("F2") @item.UnidadMedida</td>
                        <td>@item.Descripcion.ToUpper()</td>
                        <td class="text-end">@item.ValorUnitario.ToString("F2")</td>
                        <td class="text-end">@((item.Cantidad * item.ValorUnitario).ToString("F2"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row totals-section">
            <div class="col-7">
                <p><strong>SON:</strong> @Model.ImporteEnLetras</p>
            </div>
            <div class="col-5">
                <table class="w-100">
                    <tbody>
                        <tr>
                            <td>OP. GRAVADA:</td>
                            <td class="text-end">@Model.TotalOperacionGravada.ToString("F2")</td>
                        </tr>
                        <tr>
                            <td>IGV (18%):</td>
                            <td class="text-end">@Model.TotalIGV.ToString("F2")</td>
                        </tr>
                        <tr>
                            <td class="fs-5"><strong>IMPORTE TOTAL (S/):</strong></td>
                            <td class="text-end fs-5"><strong>@Model.ImporteTotal.ToString("F2")</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        window.onload = function() {
            window.print();
        }
    </script>
</body>
</html>