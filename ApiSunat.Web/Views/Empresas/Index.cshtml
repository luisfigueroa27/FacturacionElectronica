@model IEnumerable<ApiSunat.Domain.Entities.Empresa>
@{
    ViewData["Title"] = "Mis Empresas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-building me-2"></i> Mis Empresas
    </h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>
        Agregar una Empresa
    </a>
</div>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body p-4">
                <div class="d-flex align-items-center">

                    <div class="me-3">
                        <img src="@(item.LogoUrl ?? "/images/default-logo.png")"
                             alt="Logo @item.NombreComercial"
                             style="width: 60px; height: 60px; border-radius: 8px; object-fit: contain; border: 1px solid #dee2e6;" />
                    </div>

                    <div class="flex-grow-1">
                        <h5 class="mb-0 fw-bold">
                            @Html.DisplayFor(modelItem => item.NombreComercial)
                        </h5>
                        <p class="mb-0 text-muted small">@Html.DisplayFor(modelItem => item.NombreLegal)</p>
                        <small class="text-success fw-bold">
                            RUC: @Html.DisplayFor(modelItem => item.Ruc)
                            <i class="fas fa-check-circle"></i>
                        </small>
                    </div>

                    <div class="ms-auto d-flex gap-2">
                        <a asp-controller="Productos" asp-action="Index" asp-route-empresaId="@item.EmpresaId" class="btn btn-light border">
                            <i class="fas fa-list me-1"></i> Lista de precios
                        </a>
                        <a asp-controller="Documentos" asp-action="Index" asp-route-empresaId="@item.EmpresaId" class="btn btn-light border">
                            <i class="fas fa-file-alt me-1"></i> Documentos
                        </a>
                        <a asp-controller="Emision" asp-action="Index" asp-route-empresaId="@item.EmpresaId" class="btn btn-outline-primary">
                            Emitir CPE
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center p-5 border rounded">
        <p>No tienes empresas registradas.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>
            Agregar tu primera empresa
        </a>
    </div>
}